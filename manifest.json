{
  "manifest_version": 3,
  "name": "Subito.it Scraper",
  "version": "1.0",
  "description": "Scrape data from Subito.it listings",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.subito.it/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.subito.it/*"],
      "js": ["js/xlsx.full.min.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/xlsx.full.min.js"],
      "matches": ["https://www.subito.it/*"]
    }
  ]
}
